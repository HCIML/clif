# - Config file for the clif package
# It defines the following variables
#  CLIF_INCLUDE_DIRS - include directories for clif
#  CLIF_LIBRARIES    - libraries to link against
#  CLIF_EXECUTABLE   - the bar executable
 
# Compute paths
get_filename_component(CLIF_CMAKE_DIR "${CMAKE_CURRENT_LIST_FILE}" PATH)
set(CLIF_INCLUDE_DIRS "@CONF_INCLUDE_DIRS@")
 
# Our library dependencies (contains definitions for IMPORTED targets)
if(NOT TARGET clif AND NOT CLIF_BINARY_DIR)
  if (${CMAKE_CXX_COMPILER_ID} STREQUAL MSVC)
	include("${CLIF_CMAKE_DIR}/cmake/clif/fnmatch.cmake")
  endif()
  include("${CLIF_CMAKE_DIR}/cliini.cmake")
  include("${CLIF_CMAKE_DIR}/libclif.cmake")
endif()
 
# These are IMPORTED targets created by clifTargets.cmake
if (${CMAKE_CXX_COMPILER_ID} STREQUAL MSVC)
  set(CLIF_LIBRARIES clif clif_vigra cliini fnmatch)
  #set(CLIF_EXECUTABLE ...)   no executables explicitly build
elseif (${CMAKE_CXX_COMPILER_ID} STREQUAL "GNU")
  set(CLIF_LIBRARIES clif clif_vigra cliini)
endif()